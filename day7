STRING BUFFER:
public class stringbuffer {

	public static void main(String[] args) {
		StringBuffer sb=new StringBuffer("hello");
		System.out.println(sb);
		sb.append(",world");
		System.out.println(sb); 
		sb.insert(5,"java");
		System.out.println(sb);
		sb.delete(5,10);
		System.out.println(sb);
		sb.reverse();
		System.out.println(sb);
		sb.replace(0,3,"AA");
		System.out.println(sb);

	}

}

STRING:
public class strings {

	public static void main(String[] args) {
		String str=" dhara alagi";
		String str1="amuthan";
		String str2="krithi";
		String str3="mahi";
		System.out.println(str==str1);
		System.out.println(str.length());
		System.out.println(str);
		String Word[]=str.split(" ");
		for(String var:Word)
		{
		System.out.println(var);
		}
		System.out.println(str3.substring(1,4));
		System.out.println(str3.contains("dev"));
		System.out.println(str3.startsWith("ma"));
		System.out.println(str3.endsWith("es"));
		System.out.println(str3.charAt(3));
		System.out.println(str3.concat(" gether"));
		System.out.println(str3.toUpperCase());
		System.out.println(str2.toLowerCase());
		
		
	}

}
