  import java.io.*;
import java.util.*;
import java.util.Scanner;
public class Solution {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String str1 = scanner.nextLine();
        String str2 = scanner.nextLine();
        if (str1.equals(str2)) {
            System.out.println("Celestial Confirmation! The strings align.");
        } else {
            System.out.println("Galactic Discrepancy! The strings do not align.");
        }

    }
}

    


